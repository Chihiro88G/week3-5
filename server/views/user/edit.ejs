<%-include ../partials/header.ejs%>
    <%-include ../partials/main_nav.ejs%>

        <div class="container">
            <div class="row">
                <div class="offset-md-3 col-md-6">
                    <h1>
                        <%= title %>
                    </h1>
                    <form action="" class="form" method="post">
                        <div class="form-group">
                            <label for="usernameTextField">Username</label>
                            <input type="text" name="username" id="usernameTextField" value="<%= user.username %>"
                                class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="passwordTextField">Password</label>
                            <input type="text" name="password" id="passwordTextField" value="<%= user.password %>"
                                class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="emailTextField">Email</label>
                            <input type="text" name="email" id="userNameTextField" value="<%= user.email %>"
                                class="form-control" required>
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-edit">Submit</i>
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <%-include ../partials/bottom_nav.ejs%>
            <%-include ../partials/footer.ejs%>